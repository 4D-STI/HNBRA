{
  "root": true,
  "env": {
    "node": true,
    "es2023": true
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "trybe-backend-typescript",
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:@typescript-eslint/recomended"
  ],
  "rules": {
    "sonarjs/no-duplicate-string": ["error", 5]
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.eslint.json"
  },
  "type": "commonjs"
}
